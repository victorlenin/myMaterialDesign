<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    style="@style/GridImage"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TransitionActivityA"
    tools:showIn="@layout/activity_transition_a">

    <ImageView
        android:id="@+id/ivGrid1"
        android:transitionName="imageFromGrid"
        style="@style/GridImageItem"
        android:layout_column="0"
        android:layout_row="0"
        android:contentDescription="@string/grid_image"
        />

    <ImageView
        android:id="@+id/ivGrid2"
        style="@style/GridImageItem"
        android:transitionName="imageFromGrid"
        android:layout_column="1"
        android:layout_row="0"
        android:contentDescription="@string/grid_image"
        />

    <ImageView
        android:id="@+id/ivGrid3"
        style="@style/GridImageItem"
        android:transitionName="imageFromGrid"
        android:layout_column="2"
        android:layout_row="0"
        android:contentDescription="@string/grid_image"
        />

    <ImageView
        android:id="@+id/ivGrid4"
        style="@style/GridImageItem"
        android:transitionName="imageFromGrid"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:contentDescription="@string/grid_image"
        />

    <ImageView
        android:id="@+id/ivGrid5"
        style="@style/GridImageItem"
        android:transitionName="imageFromGrid"
        android:layout_column="2"
        android:layout_row="1"
        android:contentDescription="@string/grid_image"
        />

    <ImageView
        android:id="@+id/ivGrid6"
        style="@style/GridImageItem"
        android:transitionName="imageFromGrid"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="2"
        android:contentDescription="@string/grid_image" />

</GridLayout>
